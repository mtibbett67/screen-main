
# Screen configuration for main setup

# Screens to start
screen -t "Root Terminal"	1 bash -c "sudo -i"
screen -t "User Terminal"	2 bash
screen -t  Htop	            3 sh -c "sudo htop"
screen -t  IFtop            4 sh -c "sudo iftop -i wlan0"
screen -t  NetStat          5 sh -c "sudo netstat -taupnc"

# Select first screen
select 2
